<% if @order.new_record? %>
  $('.alert-message').remove();
  $(".alert-message").alert()
  $('#facebox .content').prepend("<%= j render :partial => 'shared/flash', :locals => { :flash => flash }  %>");
  $('#new-order').replaceWith("<%= j render :partial => 'check_out', :locals => { :order => @order } %>");
  $( "#order_from, #order_due" ).datepicker({ dateFormat: 'dd/mm/yy', monthNames: monthNames, dayNamesMin: dayNamesMin, firstDay: 1 })
<% else %>
  $('tr#book-<%= @copy.book.id %>').replaceWith('<%= j render :partial => 'books/book', :locals => { :book => @copy.book } %>');
  $('tr#book-<%= @copy.book.id %>').effect("highlight", {}, 5000)
  $(document).trigger('close.facebox');
  $('tr#book-<%= @copy.book.id %> a[rel*=facebox]').facebox()
<% end %>

